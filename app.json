{
  "addons": [
    "papertrail",
    "snyk"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "description": "A Slack integration to the Rally Project Management tool",
  "env": {
    "BOTKIT_STUDIO_API": {
      "description": "Token associated with your bot in Botkit Studio",
      "required": true
    },
    "DEBUG_TOGGLE": {
      "required": true
    },
    "PAPERTRAIL_API_TOKEN": {
      "required": true
    },
    "SLACK_CLIENT_ID": {
      "description": "Client ID provided by Slack",
      "required": true
    },
    "SLACK_CLIENT_SECRET": {
      "description": "Client Secret provided by Slack",
      "required": true
    },
    "SLACK_TOKEN_BOT": {
      "required": true
    },
    "SLACK_TOKEN_OAUTH": {
      "required": true
    },
    "SLACK_VERIFICATION_TOKEN": {
      "description": "Provided by Slack. Verifies incoming messages are sent from Slack and not a third party.",
      "required": true
    },
    "NODE_ENV": {
      "required": true
    },
    "MONGODB_URI": {
      "required": true,
      "description": "Provided by Heroku - copied during PRs or available in env config"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "image": "heroku/nodejs",
  "logo": "http://node-js-sample.herokuapp.com/node.svg",
  "name": "rally-slacker",
  "scripts": {
  }
}
